<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenu sur notre plate-forme. Si vous êtes a la recherche des offres d'emploi,
        veuillez cliquer sur Demandeur puis creer un compte si vous n'en avez pas ou vous
        connecter si vous avez deja un compte. Vous pourrez alors visionner des offres et postuler si vous y etes seduits."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="18dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Si vous êtes si vous etes une entreprise et vous et voulez recruter,
        veuillez cliquer sur Entreprise puis creer un compte si vous n'en avez pas ou vous
        connecter si vous avez deja un compte. Vous pourrez alors publier des offres et visionner les cv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginVertical="35dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="75dp">
        <Button
            android:id="@+id/GotoAddAccount_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:text="Demandeur" />

        <Button
            android:id="@+id/gotoAmount_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Entreprise" />
    </LinearLayout>
</LinearLayout>